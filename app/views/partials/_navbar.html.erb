<div>
  <nav class="navbar navbar-inverse" role="navigation" data-spy="affix-top">
    <ul class="main-nav nav navbar-nav">
      <% if !current_user %>
        <li class="menu-navbar-link"><%= link_to "Menu", items_path, class: 'nav-link' %></li>
      <% elsif !current_user.admin? %>
        <li class="menu-navbar-link"><%= link_to "Menu", items_path, class: 'nav-link' %></li>
        <li class="menu-navbar-link"><%= link_to "Orders", orders_path , class: 'nav-link' %></li>
      <% elsif current_user.admin? %>
        <li class="menu-navbar-link"><%= link_to "Menu", items_path, class: 'nav-link' %></li>
        <li class="menu-navbar-link"><%= link_to "Menu Dashboard", admin_items_path, class: 'nav-link' %></li>
        <li class="menu-navbar-link"><%= link_to "Orders Dashboard", admin_orders_path , class: 'nav-link' %></li>
        <li class="menu-navbar-link"><%= link_to "All Users", admin_users_path , class: 'nav-link' %></li>
      <% end %>
    </ul>

    <div class="navbar-form navbar-right">
      <div id="account">
        <%= link_to cart_items_path, class: "btn btn-success nav-link" do %>
          <span class="glyphicon glyphicon-shopping-cart"> </span>
        <span>Cart</span>
        <% end %>
        <% if current_user  %>
          <%= link_to "Logout", logout_path, method: :delete,  class: "btn btn-default nav-link" %>
          <%= link_to user_path(current_user), class: "btn btn-default nav-link" do %>
          <span class="glyphicon glyphicon-user"></span>
        <span>Profile</span>
          <% end %>
        <% else %>
          <%= link_to "Sign Up", new_user_path, class: "btn btn-default nav-link" %>
          <%= form_tag login_path, class: "navbar-form navbar-right" do %>
            <%= text_field_tag :email_address, nil, placeholder: "email address", class: "form-control navbar_style" %>
            <%= password_field_tag :password, nil, placeholder: "password", class: "form-control navbar_style" %>
            <%= submit_tag "Login!" , class: "btn btn-default navbar_style nav-link" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </nav>
</div>
