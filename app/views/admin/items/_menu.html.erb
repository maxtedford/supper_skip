<div class="container menu-items-block col-md-9">
  <div class="admin-new-stuff-buttons">
    <%= link_to "New Item", new_admin_item_path, class: "btn btn-default" %>
    <%= link_to "New Category", new_admin_category_path, class: "btn btn-default" %>
  </div>
  <% @categories.each do |category| %>
  <div class="category-block row">
    <div class= "category-title">
      <h2 class="menu-category shadow"><span class="anchor" id="category-id-<%= category.id %>"></span><%= category.name %></h2>
    </div>

    <% category.items.each do |item| %>
    <div class="thumbnail col-sm-6 col-md-4">
      <%= image_tag item.image.url(:medium) %>
      <div class="caption">
        <h3><%= item.title %></h3>
        <p><%= item.description %></p>
        <p id="price">Price: <%= item.price %></p>
        <p><a href="/admin/items/<%= item.id %>/edit" class="btn btn-default modify_button" role="button">Modify</a></p>

      </div>
    </div>
    <%end%>

  </div>
  <%end%>
</div>
