<%= form_for([:admin, @item]) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.check_box(:retired) %>
    <%= f.label :retired %>
  </div>
  <div class="field">
    <%= f.label :image, "Attach an Image" %><br>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-default nav-link" %>
  </div>
<% end %>
